@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white text-center">
                <h2 class="mb-0">
                    <i class="fas fa-ban me-2"></i>@ViewData["Title"]
                </h2>
            </div>
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-lock fa-5x text-danger mb-4"></i>
                    <h3 class="text-danger">Permission Required</h3>
                    <p class="lead text-muted">You don't have permission to access this resource.</p>
                </div>

                <div class="alert alert-warning mb-4">
                    <h5 class="alert-heading">
                        <i class="fas fa-exclamation-triangle me-2"></i>Why did this happen?
                    </h5>
                    <p class="mb-0">
                        This page requires special permissions that your account doesn't currently have.
                        If you believe this is an error, please contact the administrator.
                    </p>
                </div>

                <div class="row text-start mb-4">
                    <div class="col-md-6">
                        <h6>Your Account Information:</h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-user me-2 text-primary"></i>Username: @User.Identity?.Name</li>
                            <li><i class="fas fa-user-tag me-2 text-info"></i>Role: @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</li>
                            <li><i class="fas fa-clock me-2 text-secondary"></i>Logged in since: @DateTime.Now.ToString("hh:mm tt")</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>What can you do?</h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-arrow-left me-2 text-success"></i>Go back to previous page</li>
                            <li><i class="fas fa-home me-2 text-primary"></i>Return to homepage</li>
                            <li><i class="fas fa-envelope me-2 text-warning"></i>Contact support</li>
                        </ul>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a href="javascript:history.back()" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-md-2">
                        <i class="fas fa-home me-2"></i>Homepage
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-primary">
                        <i class="fas fa-envelope me-2"></i>Contact Support
                    </a>
                </div>

                <!-- Admin Contact Information (only show if user is not admin) -->
                @if (User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value != "Admin")
                {
                    <div class="mt-4 p-3 bg-light rounded">
                        <h6 class="mb-2">
                            <i class="fas fa-info-circle me-2 text-info"></i>Need Admin Access?
                        </h6>
                        <p class="small text-muted mb-2">
                            If you require administrative privileges to access this resource,
                            please contact your system administrator with your request.
                        </p>
                        <div class="small">
                            <strong>Admin Contact:</strong>
                            <a href="mailto:admin@abcretail.com" class="text-decoration-none">admin@abcretail.com</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 1rem;
        }

        .alert {
            border: none;
            border-radius: 0.75rem;
        }

        .btn {
            border-radius: 0.5rem;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }
    </style>
}