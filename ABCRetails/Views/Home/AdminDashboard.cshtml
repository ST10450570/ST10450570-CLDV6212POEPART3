@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="page-header d-flex align-items-center justify-content-between mb-4">
            <h1 class="mb-0">
                <i class="fas fa-tachometer-alt me-2 text-primary"></i>@ViewData["Title"]
            </h1>
            <span class="badge bg-primary fs-6">
                <i class="fas fa-user-shield me-1"></i>Administrator
            </span>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row mb-5">
    <div class="col-md-4 mb-4">
        <div class="card stats-card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-uppercase small opacity-75">Total Orders</h6>
                        <h2 class="card-text display-6 fw-bold">@ViewBag.TotalOrders</h2>
                        <small class="opacity-75">All time orders</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-shopping-cart fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-primary-dark">
                <a asp-controller="Order" asp-action="Index" class="text-white text-decoration-none">
                    View Orders <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card stats-card bg-warning text-dark h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-uppercase small opacity-75">Total Products</h6>
                        <h2 class="card-text display-6 fw-bold">@ViewBag.TotalProducts</h2>
                        <small class="opacity-75">Products in inventory</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-box fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-warning-dark">
                <a asp-controller="Product" asp-action="Index" class="text-dark text-decoration-none">
                    Manage Products <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card stats-card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-uppercase small opacity-75">Total Customers</h6>
                        <h2 class="card-text display-6 fw-bold">@ViewBag.TotalCustomers</h2>
                        <small class="opacity-75">Registered customers</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-info-dark">
                <a asp-controller="Customer" asp-action="Index" class="text-white text-decoration-none">
                    View Customers <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-5">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary">
                <i class="fas fa-bolt me-2"></i>Admin Actions
            </h3>
        </div>
        <div class="row">
            <div class="col-xl-2 col-md-4 mb-3">
                <a asp-controller="Product" asp-action="Create" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center p-3">
                        <i class="fas fa-plus-circle fa-2x text-primary mb-2"></i>
                        <h6 class="card-title mb-1">Add Product</h6>
                        <p class="card-text text-muted small mb-0">Create new product</p>
                    </div>
                </a>
            </div>
            <div class="col-xl-2 col-md-4 mb-3">
                <a asp-controller="Order" asp-action="Index" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center p-3">
                        <i class="fas fa-tasks fa-2x text-success mb-2"></i>
                        <h6 class="card-title mb-1">Process Orders</h6>
                        <p class="card-text text-muted small mb-0">Manage orders</p>
                    </div>
                </a>
            </div>
            <div class="col-xl-2 col-md-4 mb-3">
                <a asp-controller="Customer" asp-action="Index" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center p-3">
                        <i class="fas fa-users fa-2x text-info mb-2"></i>
                        <h6 class="card-title mb-1">Manage Customers</h6>
                        <p class="card-text text-muted small mb-0">View customers</p>
                    </div>
                </a>
            </div>
            <div class="col-xl-2 col-md-4 mb-3">
                <a asp-controller="Product" asp-action="Index" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center p-3">
                        <i class="fas fa-boxes fa-2x text-warning mb-2"></i>
                        <h6 class="card-title mb-1">Inventory</h6>
                        <p class="card-text text-muted small mb-0">Stock management</p>
                    </div>
                </a>
            </div>
            <div class="col-xl-2 col-md-4 mb-3">
                <a asp-controller="Upload" asp-action="Index" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center p-3">
                        <i class="fas fa-file-upload fa-2x text-secondary mb-2"></i>
                        <h6 class="card-title mb-1">Uploaded Files</h6>
                        <p class="card-text text-muted small mb-0">View customer files</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i>Recent Orders
                </h5>
            </div>
            <div class="card-body">
                <div id="recentOrders">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading recent orders...</p>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light text-end">
                <a asp-controller="Order" asp-action="Index" class="btn btn-outline-primary btn-sm">
                    View All Orders <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Low Stock Alert
                </h5>
            </div>
            <div class="card-body">
                <div id="lowStockProducts">
                    <div class="text-center py-4">
                        <div class="spinner-border text-warning" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Checking inventory...</p>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light text-end">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-warning btn-sm">
                    Manage Products <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stats-card {
            border: none;
            border-radius: 1rem;
            transition: transform 0.3s ease;
        }

            .stats-card:hover {
                transform: translateY(-5px);
            }

        .bg-primary-dark {
            background-color: rgba(0, 0, 0, 0.1) !important;
        }

        .bg-warning-dark {
            background-color: rgba(0, 0, 0, 0.1) !important;
        }

        .bg-info-dark {
            background-color: rgba(0, 0, 0, 0.1) !important;
        }

        .action-card {
            border: none;
            border-radius: 0.75rem;
            transition: all 0.3s ease;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }

            .action-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
            }

        .page-header {
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 1rem;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardData();
        });

        async function loadDashboardData() {
            try {
                const ordersResponse = await fetch('@Url.Action("GetRecentOrders", "Home")');
                if (ordersResponse.ok) {
                    const orders = await ordersResponse.json();
                    displayRecentOrders(orders);
                }

                const productsResponse = await fetch('@Url.Action("GetLowStockProducts", "Home")');
                if (productsResponse.ok) {
                    const products = await productsResponse.json();
                    displayLowStockProducts(products);
                }
            } catch (error) {
                console.error('Error loading dashboard data:', error);
                displayErrorMessages();
            }
        }

        function displayRecentOrders(orders) {
            const container = document.getElementById('recentOrders');
            if (!orders || orders.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No recent orders found.</p>
                    </div>
                `;
                return;
            }

            const ordersHtml = orders.map(order => `
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">${order.orderId}</h6>
                        <small class="text-muted">Customer: ${order.customerName} • ${order.productName}</small>
                        <br>
                        <small class="text-muted">Ordered: ${new Date(order.orderDate).toLocaleDateString()}</small>
                    </div>
                    <span class="badge bg-${getStatusBadgeClass(order.status)}">${order.status}</span>
                </div>
            `).join('');

            container.innerHTML = `
                <div class="list-group list-group-flush">
                    ${ordersHtml}
                </div>
            `;
        }

        function displayLowStockProducts(products) {
            const container = document.getElementById('lowStockProducts');
            if (!products || products.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <p class="text-muted">All products have sufficient stock.</p>
                    </div>
                `;
                return;
            }

            const productsHtml = products.map(product => `
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">${product.productName}</h6>
                        <small class="text-muted">Stock: ${product.stockAvailable}</small>
                    </div>
                    <span class="badge bg-${product.stockAvailable <= 2 ? 'danger' : 'warning'}">
                        ${product.stockAvailable <= 2 ? 'Low' : 'Warning'}
                    </span>
                </div>
            `).join('');

            container.innerHTML = `
                <div class="list-group list-group-flush">
                    ${productsHtml}
                </div>
            `;
        }

        function getStatusBadgeClass(status) {
            switch (status) {
                case 'Submitted': return 'info';
                case 'Processing': return 'warning';
                case 'Completed': return 'success';
                case 'Cancelled': return 'danger';
                default: return 'secondary';
            }
        }

        function displayErrorMessages() {
            const ordersContainer = document.getElementById('recentOrders');
            const productsContainer = document.getElementById('lowStockProducts');

            ordersContainer.innerHTML = `
                <div class="text-center py-4">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <p class="text-muted">Unable to load recent orders.</p>
                </div>
            `;

            productsContainer.innerHTML = `
                <div class="text-center py-4">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <p class="text-muted">Unable to load stock information.</p>
                </div>
            `;
        }
    </script>
}