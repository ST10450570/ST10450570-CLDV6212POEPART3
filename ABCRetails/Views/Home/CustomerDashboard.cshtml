@{
    ViewData["Title"] = "My Dashboard";
}

@* Add CSRF token for AJAX requests *@
<form style="display:none;">
    @Html.AntiForgeryToken()
</form>

<div class="row">
    <div class="col-12">
        <div class="page-header d-flex align-items-center justify-content-between mb-4">
            <div>
                <h1 class="mb-0">
                    <i class="fas fa-tachometer-alt me-2 text-primary"></i>@ViewData["Title"]
                </h1>
                @if (ViewBag.WelcomeMessage != null)
                {
                    <p class="text-muted mb-0">@ViewBag.WelcomeMessage</p>
                }
            </div>
            <span class="badge bg-success fs-6">
                <i class="fas fa-user me-1"></i>Customer
            </span>
        </div>
    </div>
</div>

<!-- Customer Stats -->
<div class="row mb-5">
    <div class="col-md-4 mb-4">
        <div class="card stats-card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-uppercase small opacity-75">Available Products</h6>
                        <h2 class="card-text display-6 fw-bold">@ViewBag.TotalProducts</h2>
                        <small class="opacity-75">Products to shop from</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-box fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-primary-dark">
                <a asp-controller="Product" asp-action="Index" class="text-white text-decoration-none">
                    Shop Now <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card stats-card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-uppercase small opacity-75">Featured Products</h6>
                        <h2 class="card-text display-6 fw-bold">@(ViewBag.FeaturedProducts?.Count ?? 0)</h2>
                        <small class="opacity-75">Special selections</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-star fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-success-dark">
                <a asp-controller="Product" asp-action="Index" class="text-white text-decoration-none">
                    View Featured <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card stats-card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-uppercase small opacity-75">My Orders</h6>
                        <h2 class="card-text display-6 fw-bold" id="myOrdersCount">-</h2>
                        <small class="opacity-75">Total orders placed</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-shopping-bag fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-info-dark">
                <a asp-controller="Order" asp-action="MyOrders" class="text-white text-decoration-none">
                    View Orders <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-5">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary">
                <i class="fas fa-bolt me-2"></i>Quick Actions
            </h3>
        </div>
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-3">
                <a asp-controller="Product" asp-action="Index" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center">
                        <i class="fas fa-store fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Shop Products</h5>
                        <p class="card-text text-muted small">Browse our catalog</p>
                    </div>
                </a>
            </div>
            <div class="col-xl-3 col-md-6 mb-3">
                <a asp-controller="Cart" asp-action="Index" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center">
                        <i class="fas fa-shopping-cart fa-3x text-success mb-3"></i>
                        <h5 class="card-title">My Cart</h5>
                        <p class="card-text text-muted small">View cart items</p>
                    </div>
                </a>
            </div>
            <div class="col-xl-3 col-md-6 mb-3">
                <a asp-controller="Order" asp-action="MyOrders" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center">
                        <i class="fas fa-list-alt fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">My Orders</h5>
                        <p class="card-text text-muted small">Order history</p>
                    </div>
                </a>
            </div>
            <div class="col-xl-3 col-md-6 mb-3">
                <a asp-controller="Home" asp-action="Contact" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center">
                        <i class="fas fa-headset fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Support</h5>
                        <p class="card-text text-muted small">Get help</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Featured Products & Recent Orders -->
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-star text-warning me-2"></i>Featured Products
                </h5>
            </div>
            <div class="card-body p-0">
                @if (ViewBag.FeaturedProducts != null && ViewBag.FeaturedProducts.Count > 0)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var product in ViewBag.FeaturedProducts)
                        {
                            <div class="list-group-item">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" class="rounded me-3" alt="@product.ProductName" style="width: 50px; height: 50px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@product.ProductName</h6>
                                        <small class="text-muted">@product.Price.ToString("C")</small>
                                    </div>
                                    <button class="btn btn-primary btn-sm add-to-cart-featured"
                                            data-product-id="@product.RowKey"
                                            type="button">
                                        <i class="fas fa-cart-plus"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-box fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No featured products available.</p>
                    </div>
                }
            </div>
            <div class="card-footer bg-light text-end">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary btn-sm">
                    Browse All <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i>My Recent Orders
                </h5>
            </div>
            <div class="card-body p-0">
                <div id="myRecentOrders">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading your orders...</p>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light text-end">
                <a asp-controller="Order" asp-action="MyOrders" class="btn btn-outline-primary btn-sm">
                    View All Orders <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stats-card {
            border: none;
            border-radius: 1rem;
            transition: transform 0.3s ease;
        }

            .stats-card:hover {
                transform: translateY(-5px);
            }

        .bg-primary-dark {
            background-color: rgba(0, 0, 0, 0.1) !important;
        }

        .bg-success-dark {
            background-color: rgba(0, 0, 0, 0.1) !important;
        }

        .bg-info-dark {
            background-color: rgba(0, 0, 0, 0.1) !important;
        }

        .action-card {
            border: none;
            border-radius: 0.75rem;
            transition: all 0.3s ease;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }

            .action-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
            }

        .page-header {
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 1rem;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadCustomerDashboardData();

            // Add event listeners for featured products add to cart buttons
            const featuredCartButtons = document.querySelectorAll('.add-to-cart-featured');
            featuredCartButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const productId = this.getAttribute('data-product-id');
                    console.log('Adding product to cart:', productId);
                    if (productId) {
                        addToCart(productId);
                    } else {
                        console.error('Product ID is missing');
                        showToast('Error: Product ID is missing', 'error');
                    }
                });
            });
        });

        async function loadCustomerDashboardData() {
            try {
                // Load user's order count
                const ordersResponse = await fetch('@Url.Action("GetMyOrderCount", "Home")');
                if (ordersResponse.ok) {
                    const data = await ordersResponse.json();
                    document.getElementById('myOrdersCount').textContent = data.count;
                }

                // Load recent orders
                const recentOrdersResponse = await fetch('@Url.Action("GetMyRecentOrders", "Home")');
                if (recentOrdersResponse.ok) {
                    const orders = await recentOrdersResponse.json();
                    displayMyRecentOrders(orders);
                }
            } catch (error) {
                console.error('Error loading customer dashboard data:', error);
                displayErrorMessages();
            }
        }

        function displayMyRecentOrders(orders) {
            const container = document.getElementById('myRecentOrders');
            if (!orders || orders.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-muted">You haven't placed any orders yet.</p>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-sm">
                            Start Shopping
                        </a>
                    </div>
                `;
                return;
            }

            const ordersHtml = orders.map(order => `
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">${order.orderId}</h6>
                        <small class="text-muted">${order.productName} • ${order.totalPrice}</small>
                        <br>
                        <small class="text-muted">Ordered: ${new Date(order.orderDate).toLocaleDateString()}</small>
                    </div>
                    <span class="badge bg-${getStatusBadgeClass(order.status)}">${order.status}</span>
                </div>
            `).join('');

            container.innerHTML = `
                <div class="list-group list-group-flush">
                    ${ordersHtml}
                </div>
            `;
        }

        function getStatusBadgeClass(status) {
            switch (status) {
                case 'Submitted': return 'info';
                case 'Processing': return 'warning';
                case 'Completed': return 'success';
                case 'Cancelled': return 'danger';
                default: return 'secondary';
            }
        }

        async function addToCart(productId) {
            try {
                console.log('addToCart called with:', productId);

                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                if (!token) {
                    console.error('CSRF token not found');
                    showToast('Security token missing. Please refresh the page.', 'error');
                    return;
                }

                const response = await fetch('@Url.Action("AddToCart", "Cart")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: new URLSearchParams({
                        'productId': productId,
                        'quantity': '1',
                        '__RequestVerificationToken': token
                    })
                });

                const result = await response.json();
                console.log('Add to cart result:', result);

                if (result.success) {
                    showToast('Product added to cart!', 'success');
                    updateCartCount();
                } else {
                    showToast(result.message || 'Error adding product to cart', 'error');
                }
            } catch (error) {
                console.error('Error adding to cart:', error);
                showToast('Error adding product to cart.', 'error');
            }
        }

        // Update cart count function
        async function updateCartCount() {
            try {
                const response = await fetch('@Url.Action("GetCartCount", "Cart")');
                if (response.ok) {
                    const data = await response.json();
                    const cartBadge = document.getElementById('cartCount');
                    if (cartBadge) {
                        cartBadge.textContent = data.count;
                        cartBadge.style.display = data.count > 0 ? 'inline' : 'none';
                    }
                }
            } catch (error) {
                console.error('Error updating cart count:', error);
            }
        }

        function showToast(message, type) {
            // Simple toast notification
            const toast = document.createElement('div');
            toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed`;
            toast.style.cssText = 'top: 20px; right: 20px; z-index: 1050; min-width: 300px;';
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check' : 'exclamation'}-circle me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(toast);

            // Auto remove after 3 seconds
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.parentNode.removeChild(toast);
                }
            }, 3000);
        }

        function displayErrorMessages() {
            const ordersContainer = document.getElementById('myRecentOrders');
            ordersContainer.innerHTML = `
                <div class="text-center py-4">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <p class="text-muted">Unable to load your orders.</p>
                </div>
            `;
        }
    </script>
}