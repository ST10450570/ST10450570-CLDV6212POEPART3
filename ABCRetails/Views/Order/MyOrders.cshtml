@model IEnumerable<ABCRetails.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6 text-primary">
        <i class="fas fa-list-alt me-2"></i>@ViewData["Title"]
    </h1>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search my orders by product name or status..." value="@ViewBag.SearchTerm">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-2"></i>Search
                </button>
            </div>
            <div class="col-md-2">
                <a asp-action="MyOrders" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-refresh me-2"></i>Clear
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">
            <i class="fas fa-history me-2"></i>My Order History
            <span class="badge bg-secondary ms-2">@Model.Count()</span>
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                           
                            <th>Order ID</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Total Price</th>
                            <th>Order Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                <td>
                                    <span class="badge bg-info">@item.RowKey</span>
                                </td>
                                <td>
                                    <strong>@item.ProductName</strong>
                                    <br />
                                    <small class="text-muted">ID: @item.ProductId</small>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@item.Quantity</span>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">@item.TotalPrice.ToString("C")</span>
                                    <br />
                                    <small class="text-muted">@item.UnitPrice.ToString("C") each</small>
                                </td>
                                <td>
                                    <span class="text-muted">@item.OrderDate.ToString("MMM dd, yyyy")</span>
                                    <br />
                                    <small class="text-muted">@item.OrderDate.ToString("hh:mm tt")</small>
                                </td>
                                <td>
                                    @{
                                        var statusClass = item.Status?.ToLower() switch
                                        {
                                            "submitted" => "bg-info",
                                            "processing" => "bg-warning",
                                            "completed" => "bg-success",
                                            "cancelled" => "bg-danger",
                                            "processed" => "bg-primary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@item.Status</span>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.RowKey"
                                       class="btn btn-outline-info btn-sm" title="View Details">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No Orders Found</h4>
                <p class="text-muted">You haven't placed any orders yet.</p>
                @if (string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-2">
                        <i class="fas fa-store me-2"></i>Start Shopping
                    </a>
                }
                else
                {
                    <a asp-action="MyOrders" class="btn btn-outline-primary mt-2">
                        <i class="fas fa-list me-2"></i>View All Orders
                    </a>
                }
            </div>
        }
    </div>

    @if (Model.Any())
    {
        <div class="card-footer bg-light">
            <div class="row">
                <div class="col-md-6">
                    <small class="text-muted">
                        Showing @Model.Count() order(s) • Total Spent: @Model.Sum(o => o.TotalPrice).ToString("C")
                    </small>
                </div>
                <div class="col-md-6 text-end">
                    <small class="text-muted">
                        Last updated: @DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")
                    </small>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .table th {
            border-top: none;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .table td {
            vertical-align: middle;
        }

        .card {
            border: none;
            border-radius: 1rem;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
            transform: translateY(-1px);
            transition: all 0.2s ease;
        }

        .badge {
            font-size: 0.75em;
        }
    </style>
}